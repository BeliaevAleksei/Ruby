<div class="jumbotron text-center">
<h3>Test participant: <%= @name %> </h3>
</div>

<div class = "row">
  <% @questions.each_with_index do |question, index| %>
  	<div class="col-sm-4">
	<h3><%=index%>. <%= question[:question] %></h3>
	  <%question.each do |key, value| %>
		<% unless key == :question  || key ==:answer then%>
		  <% if ":#{key}" != ":#{question[:answer]}" && ":#{key}" == ":#{@answers[index]}" then%>
		    <p class="text-danger"><%=key%> ) <%=value%></p>
		  <% elsif ":#{key}" != ":#{question[:answer]}" && ":#{key}" != ":#{@answers[index]}" then%>
		    <p><%=key%> ) <%=value%></p>
		  <% else%>
		  	<p class="text-success"><%=key%> ) <%=value%></p>
		  <% end %>
		<% end %>
	  <% end %>
	 </div>
  <% end %>
</div>
<hr>
<div class = "row">
	<div class="col-sm-4"> 
		<form method="post">     
			<button type="submit" class="btn btn-default">Try Again</button>
    	</form>
    </div>
	<div class="col-sm-4"> 
		<h3>ТЕСТ ПРОЙДЕН</h3>
	</div>
</div>
