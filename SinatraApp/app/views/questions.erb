<div class="jumbotron text-center">
<h3>Test participant: <%= @name %> </h3>
</div>
<div class = "row">
<div class="col-sm-12">
    <form method="post">
    <h3><%=@id%>. <%= @questions[@id.to_i][:question] %></h3>
    <hr>
    <% @questions[@id.to_i].each do |key, value| %>
        <% unless key == :question  || key ==:answer then%>
            <div class="radio">
                <label><input type="radio" name="optradio" value= <%=key%>><%=key%> ) <%=value%></label>
            </div>
        <% end %>
    <% end %>
      <button type="submit" class="btn btn-default">Accept</button>
    </form>
</div>
</div>
<hr>
<div class="row">
    <div class="col-sm-4">
        <p>Answers: <%=@responses_number%></p>
    </div>
    <div class="col-sm-4">
        <p class="text-success">Correct: <%=@correct_responses%></p>
    </div>
    <div class="col-sm-4">
        <p class="text-danger">Wrong: <%=@responses_number - @correct_responses%></p>
    </div>
<ul class="pagination pagination">
<% for i in 0...@questions.size() %>
  <% if i == @id.to_i then %>
    <li class="active"><a href="/questions/<%=i%>"> <%=i%> </a></li>
  <% elsif @answers[i] != nil then %>
    <li class="disabled"><a href=""> <%= i %></a></li>
  <% else %>
    <li><a href="/questions/<%=i%>"> <%= i %></a></li>
  <% end %>
<% end %>
</ul>
